<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/new_group_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="CREATE A GROUP"
        android:textSize="26sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/new_group_subtitle_tv"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="What kind of group are\nyou looking for?"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_group_title_tv" />

    <com.mikhaellopez.circleview.CircleView
        android:id="@+id/pleasant_dining_circle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        app:cv_border="true"
        app:cv_border_color="#000000"
        app:cv_border_width="8dp"
        app:cv_color="#3f51b5"
        app:cv_shadow="true"
        app:cv_shadow_color="#3f51b5"
        app:cv_shadow_radius="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_group_subtitle_tv" />

    <TextView
        android:id="@+id/pleasant_dining_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Pleasant\nDining"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/pleasant_dining_circle"
        app:layout_constraintEnd_toEndOf="@+id/pleasant_dining_circle"
        app:layout_constraintStart_toStartOf="@+id/pleasant_dining_circle"
        app:layout_constraintTop_toTopOf="@+id/pleasant_dining_circle" />


    <com.mikhaellopez.circleview.CircleView
        android:id="@+id/quick_eats_circle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="24dp"
        app:cv_border="true"
        app:cv_border_color="#000000"
        app:cv_border_width="8dp"
        app:cv_color="@color/dark_red"
        app:cv_shadow="true"
        app:cv_shadow_color="@color/dark_red"
        app:cv_shadow_radius="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_group_subtitle_tv" />

    <TextView
        android:id="@+id/quick_eats_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Quick\nEats"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/quick_eats_circle"
        app:layout_constraintEnd_toEndOf="@+id/quick_eats_circle"
        app:layout_constraintStart_toStartOf="@+id/quick_eats_circle"
        app:layout_constraintTop_toTopOf="@+id/quick_eats_circle" />

    <com.mikhaellopez.circleview.CircleView
        android:id="@+id/outdoor_activities_circle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cv_border="true"
        app:cv_border_color="#000000"
        app:cv_border_width="8dp"
        app:cv_color="@color/red"
        app:cv_shadow="true"
        app:cv_shadow_color="@color/red"
        app:cv_shadow_radius="10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pleasant_dining_circle" />

    <TextView
        android:id="@+id/ourdoor_activies_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Outdoor\nActivities"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/outdoor_activities_circle"
        app:layout_constraintEnd_toEndOf="@+id/outdoor_activities_circle"
        app:layout_constraintStart_toStartOf="@+id/outdoor_activities_circle"
        app:layout_constraintTop_toTopOf="@+id/outdoor_activities_circle" />

    <com.mikhaellopez.circleview.CircleView
        android:id="@+id/night_life_circle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cv_border="true"
        app:cv_border_color="#000000"
        app:cv_border_width="8dp"
        app:cv_color="@color/light_red"
        app:cv_shadow="true"
        app:cv_shadow_color="@color/light_red"
        app:cv_shadow_radius="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quick_eats_circle" />

    <TextView
        android:id="@+id/night_life_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Night\nLife"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/night_life_circle"
        app:layout_constraintEnd_toEndOf="@+id/night_life_circle"
        app:layout_constraintStart_toStartOf="@+id/night_life_circle"
        app:layout_constraintTop_toTopOf="@+id/night_life_circle" />

</androidx.constraintlayout.widget.ConstraintLayout>